{
"compileOnSave": true,
 "compilerOptions": {
    "target": "es5",
    "module": "commonjs", 
    "noEmitOnError": false,
    "noImplicitAny": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es6"],
    "outDir": "build",
    "sourceMap": true
  },
  "include": [
        "src/**/*"
  ],
  "exclude": [
      "node_modules"
  ]
}